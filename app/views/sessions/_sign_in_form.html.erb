<h2 class="text-lg text-white text-center pb-3">Sign in to existing account</h2>

<div class="mx-auto w-full px-4">
  <%= form_with url: session_path, class: "contents text-white" do |form| %>
    <div class="my-2">
      <%= form.text_field :login,
        required: true, autofocus: true, autocomplete: "username",
        placeholder: "username or email", value: params[:login],
        class: "block shadow-sm rounded-md border border-violet-200 focus:border-transparent focus:outline-solid focus:outline-2 focus:outline-violet-600 px-3 py-2 mt-2 w-full"
      %>
    </div>

    <div class="my-2">
      <%= form.password_field :password,
        required: true, autocomplete: "current-password",
        placeholder: "password", value: params[:password],
        class: "block shadow-sm rounded-md border border-violet-200 focus:border-transparent focus:outline-solid focus:outline-2 focus:outline-violet-600 px-3 py-2 mt-2 w-full"
      %>
    </div>

    <div class="inline">
      <%=
        form.submit "Sign in",
        class: "w-full sm:w-auto text-center rounded-lg mt-8 mx-auto px-3.5 py-2.5 bg-violet-600 hover:bg-violet-500 text-white block font-medium cursor-pointer"
      %>
    </div>
  <% end %>
</div>
