<div data-controller="login-tabs" class="login-container" data-login-tabs-target="container">
  <div class="tabs">
    <div class="tab-wrapper sign-up-tab">
      <button 
        data-login-tabs-target="tab"
        data-action="login-tabs#switchTab"
        data-tab="sign-up"
        class="tab sign-up-tab">
        Sign up </button>
    </div>
    <div class="tab-wrapper mx-1 sign-in-tab">
      <button
        data-login-tabs-target="tab"
        data-action="login-tabs#switchTab"
        data-tab="sign-in"
        class="tab sign-in-tab">
        Log in
      </button>
    </div>
    <div class="tab-wrapper quick-login-tab">
      <button 
        data-login-tabs-target="tab"
        data-action="login-tabs#switchTab"
        data-tab="quick-login"
        class="tab quick-login-tab">
        Guest
      </button>
    </div>
  </div>

  <div data-login-tabs-target="forms" class="forms">
    <%= turbo_frame_tag "sign-up-form", class: "form sign-up-form hidden" do %>
      <%= render "sign_up_form" %>
    <% end %>

    <%= turbo_frame_tag "sign-in-form", class: "form sign-in-form hidden" do %>
      <%= render "sign_in_form" %>
    <% end %>

    <%= turbo_frame_tag "quick-login-form", class: "form quick-login-form hidden" do %>
      <%= render "quick_login_form" %>
    <% end %>
  </div>
</div>
