<div class="container flex justify-center">
  <div class="flex flex-col items-center">
    <% if alert = flash[:alert] %>
      <p class="py-2 px-3 bg-red-50 mb-5 text-red-500 font-medium rounded-lg inline-block" id="alert"><%= alert %></p>
    <% end %>

    <% if notice = flash[:notice] %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <div class="mb-10 text-3xl font-bold text-indigo-800">
      Type your stuff in:
    </div>

    <div data-controller="login-tabs" class="login-container m-auto" data-login-tabs-target="container">
      <div class="tabs">
        <div class="tab-wrapper sign-up-tab">
          <button
            data-login-tabs-target="tab"
            data-action="login-tabs#switchTab"
            data-tab="sign-up"
            class="tab sign-up-tab">
            Sign up </button>
        </div>
        <div class="tab-wrapper mx-1 sign-in-tab">
          <button
            data-login-tabs-target="tab"
            data-action="login-tabs#switchTab"
            data-tab="sign-in"
            class="tab sign-in-tab active">
            Log in
          </button>
        </div>
        <div class="tab-wrapper quick-login-tab">
          <button
            data-login-tabs-target="tab"
            data-action="login-tabs#switchTab"
            data-tab="quick-login"
            class="tab quick-login-tab">
            Guest
          </button>
        </div>
      </div>

      <div data-login-tabs-target="forms" class="forms sign-in-tab">
        <%= turbo_frame_tag "sign-up-form", class: "form sign-up-form hidden" do %>
          <%= render "sign_up_form" %>
        <% end %>

        <%= turbo_frame_tag "sign-in-form", class: "form sign-in-form" do %>
          <%= render "sign_in_form" %>
        <% end %>

        <%= turbo_frame_tag "quick-login-form", class: "form quick-login-form hidden" do %>
          <%= render "quick_login_form" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
