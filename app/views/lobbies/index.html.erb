<div class="flex flex-col w-full">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-bold text-white">TicTacToe Lobbies</h1>

    <%= link_to "Create New Lobby", tic_tac_toe_lobbies_path,
        data: { turbo_method: :post, turbo_frame: "lobbies" },
        class: "bg-teal-500 hover:bg-teal-400 text-white font-semibold px-4 py-2 rounded-lg shadow-md transition" %>
  </div>

  <%= turbo_frame_tag "lobbies" do %>
    <table class="table-auto w-full border border-gray-200">
      <thead class="bg-gray-100">
        <tr class="divide-x-2 divide-gray-200">
          <th class="px-4 py-2 text-center">Title</th>
          <th class="px-4 py-2 text-center">Players</th>
          <th class="px-4 py-2 text-center">Status</th>
          <th class="px-4 py-2 text-center w-40">Actions</th>
        </tr>
      </thead>
      <tbody>
        <%= render collection: @lobbies, partial: "/lobbies/lobby_row", as: :lobby %>
      </tbody>
    </table>
  <% end %>
</div>
